<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/applicant_tvDeveloperName"
            android:text="naziv_aplikanta"
            android:layout_marginTop="7dp"
            android:layout_marginStart="4dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/applicant_tvPercentage"
            android:text="num"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/applicant_tvDeveloperName"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/applicant_tvPercMatch"
            android:text="@string/perc_match"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/applicant_tvPercentage"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/applicant_tvCollabModelLabel"
            android:text="@string/applied"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/applicant_tvDeveloperName"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_height="wrap_content"
            android:id="@+id/applicant_tvApplyDate"
            android:text="apply_date"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/applicant_tvDeveloperName"
            android:layout_toEndOf="@+id/applicant_tvCollabModelLabel"
            android:textSize="16sp"
            />

    </RelativeLayout>
</LinearLayout>