<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company_profile_hproj_tvProjectName"
            android:text="naziv_projekta"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company_profile_hproj_tvCompanyName"
            android:text="naziv_poduzeca"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@id/company_profile_hproj_tvProjectName"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/company_profile_hproj_tvProjectState"
            android:text="stanje"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/company_profile_hproj_tvProjectName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company_profile_hproj_tvCollab"
            android:text="@string/list_item_projects_collab"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/company_profile_hproj_tvProjectName"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company_profile_hproj_tvCollabNum"
            android:text="15"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/company_profile_hproj_tvCollab"
            android:layout_below="@+id/company_profile_hproj_tvProjectName"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>
</LinearLayout>