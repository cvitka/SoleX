<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="hr.foi.air.solex.DeveloperProfileActivity">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_company_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="hr.foi.air.solex.DeveloperProfileActivity">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/developer_logo"
                android:id="@+id/activity_collaboration_imvDeveloper"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Developer Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/activity_collaboration_imvDeveloper"
                android:layout_marginStart="40dp"
                android:layout_marginTop="33dp"
                android:id="@+id/textView" />

            <TextView
                android:text="E-Mail contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:text="Years of experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:id="@+id/textView3"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />
            <View
                android:id="@+id/horizontalBarView"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#55555555"
                android:layout_below="@+id/activity_collaboration_imvDeveloper"/>

            <TextView
                android:text="Highlighted Projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:id="@+id/textView4"
                android:layout_marginTop="43dp"
                android:layout_below="@+id/horizontalBarView"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <View
                android:id="@+id/horizontalBarView2"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#55555555"
                android:layout_below="@+id/imgBtnTestExpand">
            </View>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gray_collapse_img"
                android:id="@+id/imgBtnTestExpand"
                android:layout_marginTop="35dp"
                android:adjustViewBounds="true"
                android:background="@drawable/roundbutton"
                android:layout_below="@+id/horizontalBarView"
                android:layout_alignEnd="@+id/horizontalBarView"
                android:backgroundTint="@color/colorPrimary"
                android:tag="gray_expand_img"/>

            <RelativeLayout
                android:id="@+id/highlightedProjectsLayout"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_below="@+id/horizontalBarView2"
                android:layout_marginTop="8dp"
                android:layout_centerInParent="true">
                <View
                    android:id="@+id/horizontalBarViewInRelLay"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#55555555"
                    android:layout_marginTop="70dp">
                </View>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solex projekt"
                    android:id="@+id/nazivProjekta1"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starost: 3 tjedna" />

                <TextView
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj sudionika: 7" />

                <View
                    android:id="@+id/horizontalBarViewInRelLay2"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#55555555"
                    android:layout_marginTop="140dp">
                </View>
                <TextView
                    android:layout_marginTop="85dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MicroTechni"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starost: 2 mjeseca"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj sudionika: 23" />

            </RelativeLayout>


            <TextView
                android:text="IT skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:id="@+id/textView5"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/highlightedProjectsLayout"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <View
                android:id="@+id/horizontalBarView3"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#55555555"
                android:layout_below="@+id/imageButton2"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gray_expand_img"
                android:id="@+id/imageButton2"
                android:adjustViewBounds="true"
                android:background="@drawable/roundbutton"
                android:backgroundTint="@color/colorPrimary"
                android:tag="gray_expand_img"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignParentEnd="true"/>

            <Button
                android:text="Update"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:id="@+id/btnStartUpdateDeveloperData"
                android:background="@color/colorPrimaryDark"
                android:layout_marginRight="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/highlightedProjectsLayout" />
            <Button
                android:text="Projects"
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:id="@+id/activity_developer_profile_btnProjects"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/horizontalBarView3"
                android:layout_centerInParent="true"/>
        </RelativeLayout>





    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:visibility="visible"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_drawer_header"/>
</android.support.v4.widget.DrawerLayout>

