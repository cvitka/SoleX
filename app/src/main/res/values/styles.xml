<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/grey</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.Bright.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimaryDarker</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDarker</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDarker</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ActivityWithInput" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- tekst -->
        <item name="android:textColor">@color/navyBlue</item>
        <item name="editTextColor">@color/navyBlue</item>

        <!-- button press -->
        <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AcitivityProfilesBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ButtonStyleBlue">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/roundbutton</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/colorPrimaryDarker</item>
    </style>

    <style name="ActivityDrawerTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>

    </style>
</resources>
